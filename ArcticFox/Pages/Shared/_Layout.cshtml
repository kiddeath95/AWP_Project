<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArcticFox</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArcticFox.styles.css" asp-append-version="true" />
</head>
<body>
<div class="page-wrap">
    <canvas id="snowCanvas"></canvas>
    <header>
        <div class="nav-container">
            <div class="brand">
                <div class="brand-logo"></div>
                <div class="brand-text">
                    <span class="brand-title">Vulpes lagopus</span>
                    <span class="brand-subtitle">Arctic Fox Tidbits</span>
                </div>
            </div>
            <nav>
                <a asp-area="" asp-page="/Index">Home</a>
                <a asp-area="" asp-page="/About">About</a>
                <a asp-area="" asp-page="/Habitat">Habitat</a>
                <a asp-area="" asp-page="/Conservation">Conservation</a>
                <a asp-area="" asp-page="/Gallery">Gallery</a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-inner">
            <div>&copy; 2025 Cody krull</div>
            <a asp-area="" asp-page="/HowToHelp">How To Help</a>
        </div>
    </footer>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
